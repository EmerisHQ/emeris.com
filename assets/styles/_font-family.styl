@font-face
  font-family 'Inter var'
  font-weight 100 900
  font-display swap
  font-style normal
  font-named-instance 'Regular'
  src url("https://raw.githubusercontent.com/rsms/inter/master/docs/font-files/Inter.var.woff2") format("woff2")

@font-face
  font-family 'Casta var'
  font-weight 100 900
  font-display swap
  font-style normal
  font-named-instance 'Regular'
  src local("Casta var"), url("~/assets/fonts/Casta-BoldExpanded.otf") format("truetype")
  font-display block

/* Monospaced Typefaces (for code) */

/* From http://cssfontstack.com */
// code, .tm-code
//   font-family $font-family-monospace
//   -webkit-font-feature-settings 'liga' on, 'calt' on, 'zero' on
//   font-feature-settings 'liga' on, 'calt' on, 'zero' on

.tm-serif
  font-family $font-family-serif

@supports (font-variation-settings: normal)
  .tm-serif
    font-family $font-family-serif-var
